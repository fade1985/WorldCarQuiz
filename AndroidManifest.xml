<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.worldcarquiz"
    android:versionCode="1"
    android:versionName="1.0" 
    android:hardwareAccelerated="true">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.VIBRATE"/>
    
    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
     
    <!-- Permission to write to external storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
 
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.worldcarquiz.activity.MainMenuActivity"
            android:label="@string/app_name"
            android:theme="@style/android:style/Theme.Light.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.android.worldcarquiz.activity.WorldsListActivity"
            android:label="@string/app_name">      
        </activity>
        <activity 
            android:name="com.android.worldcarquiz.activity.QuestionActivity"
            android:theme="@style/CustomActionBarTheme"
            android:label="@string/app_name">      
        </activity>       
        <activity 
            android:name="com.android.worldcarquiz.activity.WorldPagerActivity"
            android:theme="@style/CustomActionBarTheme"
            android:label="@string/app_name">      
        </activity>       
         <activity 
            android:name="com.android.worldcarquiz.activity.QuestionActivitySolved"
            android:theme="@style/CustomActionBarTheme"
            android:label="@string/app_name">      
        </activity>       
    </application>

</manifest>
