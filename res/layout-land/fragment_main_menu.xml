<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/shapes"
     >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >
 		
 		<RelativeLayout 
 		    android:layout_width="match_parent"
 		    android:layout_height="wrap_content"
 		    >
 		    
 		    <TextView
            android:id="@+id/world_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/world_quiz"
            android:textColor="#ffffff"
            android:textSize="42sp"     
             />
	        <TextView
	            android:id="@+id/cars"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:layout_below="@id/world_quiz"
				android:layout_alignRight="@id/world_quiz"
	            android:text="@string/cars"
	            android:textColor="#ffffff"
	            android:textSize="25sp"/>
	        
	        <ImageView 
		        android:id="@+id/ic_action_split"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/world_quiz"
				android:layout_toLeftOf="@id/cars"
		        android:src="@drawable/ic_action_split"/>
		    
 		</RelativeLayout>
 		
 		<LinearLayout 
 		    android:layout_width="match_parent"
 		    android:layout_height="wrap_content"
 		    android:orientation="horizontal"
 		    android:layout_marginTop="10dp"
 		    android:weightSum="1">
 		    
 		    <Button 
            android:id="@+id/play_main_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_weight="0.5"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="17.5dp"
            android:layout_marginTop="12dp"
            android:text="@string/play"
            android:textColor="#ffffff"
            />
        <Button 
            android:id="@+id/worlds_main_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_weight="0.5"
            android:layout_marginLeft="17.5dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="12dp"
            android:text="@string/worlds"
            android:textColor="#ffffff"
            />
 		</LinearLayout>
 		
 		<LinearLayout 
 		    android:layout_width="match_parent"
 		    android:layout_height="wrap_content"
 		    android:orientation="horizontal"
 		    android:weightSum="1">
 		    
 		    <Button 
            android:id="@+id/tutorial_main_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_weight="0.5"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="17.5dp"
            android:layout_marginTop="12dp"
            android:text="@string/tutorial"
            android:textColor="#ffffff"
            />
        <Button 
            android:id="@+id/stats_main_circle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_weight="0.5"
            android:layout_marginLeft="17.5dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="12dp"
            android:text="@string/stats"
            android:textColor="#ffffff"
            />
 		</LinearLayout>

 		<LinearLayout 
 		    android:layout_width="match_parent"
 		    android:layout_height="wrap_content"
 		    android:orientation="horizontal"
 		    android:weightSum="1">
 		    
 		    <Button 
            android:id="@+id/awards_main_circle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_weight="0.5"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="17.5dp"
            android:layout_marginTop="12dp"
            android:text="@string/awards"
            android:textColor="#ffffff"
            />
        <Button 
            android:id="@+id/stamps_main_circle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_weight="0.5"
            android:layout_marginLeft="17.5dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="12dp"
            android:text="@string/stamps"
            android:textColor="#ffffff"
            />
 		</LinearLayout>
 		
    </LinearLayout>
    <ImageView
      	android:layout_width="match_parent"
      	android:layout_height="wrap_content"
      	android:layout_alignParentBottom="true"
      	android:scaleType="fitEnd"
        android:src="@drawable/fondo" />

</RelativeLayout>
